<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot2">

  <xacro:include filename="inertial_macros.xacro"/>

  <!-- Base -->
  <link name="robot2/base_link"/>

  <joint name="robot2/chassis_joint" type="fixed">
    <parent link="robot2/base_link"/>
    <child link="robot2/chassis"/>
    <origin xyz="-0.1 0 0"/>
  </joint>

  <link name="robot2/chassis">
        <visual>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.15 0 0.075"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
  </link>

  <!-- Left wheel -->
  <joint name="robot2/left_wheel_joint" type="continuous">
    <parent link="robot2/base_link"/>
    <child link="robot2/left_wheel"/>
    <origin xyz="0 0.175 0" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="robot2/left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
  </link>

  <!-- Right wheel -->
  <joint name="robot2/right_wheel_joint" type="continuous">
    <parent link="robot2/base_link"/>
    <child link="robot2/right_wheel"/>
    <origin xyz="0 -0.175 0" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>
  <link name="robot2/right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
  </link>

  <!-- Caster -->
  <joint name="robot2/caster_wheel_joint" type="fixed">
    <parent link="robot2/chassis"/>
    <child link="robot2/caster_wheel"/>
    <origin xyz="0.24 0 0"/>
  </joint>
  <link name="robot2/caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
  </link>

  <!-- Ground friction -->
  <gazebo reference="robot2/caster_wheel">
    <mu1>0.001</mu1>
    <mu2>0.001</mu2>
  </gazebo>

  <!-- Diff drive plugin -->
  <gazebo>
    <plugin name="robot2_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros><namespace>robot2</namespace></ros>

      <left_joint>robot2/left_wheel_joint</left_joint>
      <right_joint>robot2/right_wheel_joint</right_joint>
      <wheel_separation>0.35</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>

      <max_wheel_torque>200</max_wheel_torque>
      <max_wheel_acceleration>10.0</max_wheel_acceleration>

      <odometry_frame>robot2/odom</odometry_frame>
      <robot_base_frame>robot2/base_link</robot_base_frame>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>
    </plugin>
  </gazebo>

    <joint name="robot2/laser_joint" type="fixed">
    <parent link="robot2/chassis"/>
    <child link="robot2/laser_frame"/>
    <origin xyz="0.1 0 0.175" rpy="0 0 0"/>
  </joint>

    <link name="robot2/laser_frame">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="robot2/laser_frame">
        <sensor name="robot2_laser" type="ray">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>false</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <min_angle>-3.14</min_angle>
                        <max_angle>3.14</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.3</min>
                    <max>12</max>
                </range>
            </ray>
            <plugin name="robot2_laser_controller" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>~/out:=/robot2/scan</remapping>
                </ros>
                <output_type>sensor_msgs/LaserScan</output_type>
                <frame_name>robot2/laser_frame</frame_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>
